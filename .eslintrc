{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "react":  {
            "version": "detect"
        }
    },
    "plugins": [
        "react",
        "react-redux",
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react-redux/recommended"
    ],
    "rules": {
        "@typescript-eslint/no-unused-vars": "off"
    }
}
